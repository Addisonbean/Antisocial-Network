
<% if logged_in? %>
	<!--
	<div id="createposts">
		<%= render "posts/form", post: @post %>
	</div>
	-->

	<div class="home-container">
		<div class="post-form">
			<%= render "posts/form", post: @post %>
		</div>
		<%= render "shared/feed" %>
	</div>

<% else %>

<div id="Xplanation">
	<p>Welcome to the Antisocial-Network! The Antisocial-Network is unlike any other social network. After signing up, you will be friends with everyone else on the site. From there, you may unfriend people whose posts you do not wish to see. </p>

</div>
	
<div class="extra-space">
	<div id="mainPageLogin">

		<div id="new-user">
		<h1 id="new-user-heading">New User</h1>

			<%= render 'users/form', user: User.new %>

		</div>


		<%= form_for(:session, url: login_path, html: { id: "existing-user" }) do |f| %>
			<h1 id="new-user-heading">Existing user</h1>
		
			<%= f.label :username %>
			<%= f.text_field :username %>
			

			<%= f.label :password %>
			<%= f.password_field :password %>

			<br>
			<br>
			<%= f.submit "Log in." %>

		<% end %>
	</div>
</div>

<% end %>




